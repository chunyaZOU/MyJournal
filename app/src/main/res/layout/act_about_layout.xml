<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/dimen_16dp"
              android:layout_marginTop="50dp"
              android:layout_marginBottom="@dimen/dimen_16dp"
              android:orientation="vertical"
              tools:context="com.example.h2601864.myjournal.act.ActAbout">

    <TextView
        style="@style/black_content_16sp"
        android:text="My Journal  1.0"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:id="@+id/llContainer"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16dp"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:layout_height="wrap_content">


            <TextView
                style="@style/white_content_16sp"
                android:text="Intro"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:gravity="left"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=":"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/white_content_14sp"
                android:text="A simple recording app ."
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="left"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_16dp"
            android:layout_height="wrap_content">


            <TextView
                style="@style/white_content_16sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/white_content_14sp"
                android:text="one idea \none ray thought \none very interesting thing \nwright down \na better life is coming ."
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="left"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:layout_height="wrap_content">


            <TextView
                style="@style/white_content_16sp"
                android:text="Author"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:gravity="left"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=":"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/white_content_14sp"
                android:text="Zouchunya"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="left"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:layout_height="wrap_content">


            <TextView
                style="@style/white_content_16sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/white_content_14sp"
                android:text="An android developer \nlove life ..."
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="left"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="@dimen/dimen_16dp"
            android:layout_height="wrap_content">


            <TextView
                style="@style/white_content_16sp"
                android:textStyle="bold"
                android:text="E-mail"
                android:layout_width="0dp"
                android:gravity="left"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=":"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="mufengzcy@126.com"
                android:layout_width="0dp"
                android:textSize="14sp"
                android:textColorLink="@color/white"
                android:autoLink="email"
                android:layout_weight="2"
                android:gravity="left"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
