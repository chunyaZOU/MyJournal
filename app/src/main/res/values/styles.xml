<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="black_title_20sp">
        <item name="android:textColor">@color/black_title</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="black_title_16sp">
        <item name="android:textColor">@color/black_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="black_title_14sp">
        <item name="android:textColor">@color/black_title</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="black_content_16sp">
        <item name="android:textColor">@color/black_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="black_content_14sp">
        <item name="android:textColor">@color/black_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="white_title_34sp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="white_title_20sp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="white_content_16sp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="white_content_14sp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="anim_style">
        <item name="android:windowEnterAnimation">@anim/in_top2location</item>
        <item name="android:windowExitAnimation">@anim/out_location2top</item>
    </style>

    <style name="month_style">
        <item name="android:layout_width">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textViewStyle">@style/white_content_16sp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ActionBarStyleDef" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/light_blue_500</item>
        <item name="android:displayOptions">showTitle</item>
    </style>
    <style name="ActionBarStyleGray" parent="ActionBarStyleDef">
        <item name="android:background">@color/black_content</item>
    </style>
    <style name="ThemeACtBarCustomGray" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyleGray</item>
    </style>
    <style name="ThemeActBarCustomBlue" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyleDef</item>
    </style>

</resources>
